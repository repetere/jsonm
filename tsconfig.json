{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "outDir": "./build",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    // "node_modules/@modelx/model/**/*.ts",
    // "node_modules/@modelx/data/**/*.ts", 
    // "manual/media/legacy/model-backup-test.ts", 
    // "manual/media/legacy/model-backup.ts",
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/**/*.*",
    "**/*.test.ts",
    "**/*.test.tsx",
  ],
  "typedocOptions":{
    "out":"./docs",
    "include":"./manual",
    "media": "./manual/media",
    "hideGenerator":true
  }
}
